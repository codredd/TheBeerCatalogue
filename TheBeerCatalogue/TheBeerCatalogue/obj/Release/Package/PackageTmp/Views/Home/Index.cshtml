@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>The Beer Catalogue</h1>
    <p class="lead">"The Beer Catalogue is a PoC which makes use of Brewery DB API to retrieve the list of available Beers and then render it on the UI using jQuery Datatable.
    The Default ASP.NET MVC template is used for the UI"</p>
</div>

<div class="row">
    <div class="bgImgBeer">
        <h2>Retrieve the list of Beer from around the world</h2>
        <p>
            Click the below button to retrieve the list of Beer from Database
        </p>
        <p class="btn btn-default">@Html.ActionLink("Click Here", "Index", "Beer")</p>
    </div>
        <div class="bgImgBeer">
            <h2>Retrieve the list of Brewery from around the world</h2>
            <p>Click the below button to retrieve the list of Breweries from Database</p>
            <p class="btn btn-default">@Html.ActionLink("Click Here", "Index", "Brewery")</p>
        </div>
</div>

<style type="text/css">
    .bgImgBeer {
        position: relative;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
        padding-top: 15px;
        padding-bottom: 15px;
        background-color: white;
        border: solid;
        border-color: lightgrey;
        width: 40%;
        float: left;
    }
</style>